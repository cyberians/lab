<p id="notice"><%= notice %></p>

<h1>Listing Clients</h1>

<table>
  <thead>
    <tr>
      <th>ФИО</th>
      <th>Паспортные данные</th>
      <th>Водительские права</th>
      <th>Дата начала вождения</th>
      <th>Дата рождения</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.fio %></td>
        <td><%= client.passport %></td>
        <td><%= client.licence %></td>
        <td><%= client.drive_date_begin %></td>
        <td><%= client.birthday %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

