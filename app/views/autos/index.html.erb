<h1>Listing Autos</h1>

<table>
  <thead>
    <tr>
      <th>Клиент</th>
      <th>Госномер</th>
      <th>Техпаспорт</th>
      <th>Марка и модель</th>
      <th>Дата выпуска</th>
      <th>Цвет</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @autos.each do |auto| %>
      <tr>
        <td><%= auto.client.fio %></td>
        <td><%= auto.gosnomer %></td>
        <td><%= auto.tech_passport %></td>
        <td><%= auto.marka_model %></td>
        <td><%= auto.date_release %></td>
        <td><%= auto.color %></td>
        <td><%= link_to 'Show', auto %></td>
        <td><%= link_to 'Edit', edit_auto_path(auto) %></td>
        <td><%= link_to 'Destroy', auto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

